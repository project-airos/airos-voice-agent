# MaaS (Model as a Service) Configuration
# Copy this to config.toml and customize

# OpenAI Configuration
[openai]
api_base = "https://api.openai.com/v1"
openai_api_key = "env:OPENAI_API_KEY"  # Reads from environment variable
model = "gpt-4o-mini"
temperature = 0.7
max_tokens = 256

# Optional: Anthropic Configuration
[anthropic]
api_key = "env:ANTHROPIC_API_KEY"
model = "claude-3-5-sonnet-20241022"
temperature = 0.7
max_tokens = 256

# MCP Servers for LLM tool integration

# Playwright MCP for browser automation
[mcp.playwright]
command = "npx"
args = ["-y", "@playwright/mcp"]
env = { BROWSER_TYPE = "chromium", HEADLESS = "true" }

# Filesystem MCP for file system access
[mcp.filesystem]
command = "npx"
args = ["-y", "@modelcontextprotocol/server-filesystem", "/tmp"]
